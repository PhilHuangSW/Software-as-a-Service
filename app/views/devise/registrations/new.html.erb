<div class="container">
  <div class= "row">
    <div class="col-md-6 col-md-offset-3">
      <% if params[:plan] == '2' %>
        <h1 class="text-center">Pro Account</h1>
        <p class="text-center">Sign up for the pro account for $10/month and get access to the community and contact information!</p>
      <div class="well">
        <h2>Sign up</h2>
        <%= render "pro_form" %>
      </div>
      <% else %>
        <h1 class="text-center">Basic Account</h1>
        <p class="text-center">Sign up for free and get basic access to the community.</p>
        <div class="well">
          <h2>Sign up</h2>
          <%= render "basic_form" %>
        </div>
      <% end %>
    </div>
  </div>
</div>